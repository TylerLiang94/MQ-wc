/**
 * 全局样式表
 */
.container {
  padding: 40rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

/* 教师卡片样式 */
.teacher-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.teacher-info {
  flex: 1;
}

.teacher-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.teacher-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.teacher-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 学员卡片样式 */
.student-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.student-image {
  width: 100%;
  height: 300rpx;
}

.student-info {
  padding: 30rpx;
}

.student-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.student-achievement {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.student-quote {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
  display: block;
}

/* 课程卡片样式 */
.course-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.course-image {
  width: 100%;
  height: 300rpx;
}

.course-info {
  padding: 30rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.course-duration {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.course-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
} 
