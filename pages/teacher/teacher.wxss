/* pages/teacher/teacher.wxss */
.teacher-banner {
  width: 100%;
  height: 400rpx;
  margin: 30rpx 0;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
  border: 1px solid #eee;
}

.test-image {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  border: 1px solid #eee;
}

.achievement-list {
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.achievement-item {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  padding: 20rpx 0;
  text-indent: -20rpx;
  padding-left: 30rpx;
}

.achievement-item:last-child {
  border-bottom: none;
}

.competition-button {
  display: block;
  width: 80%;
  margin: 40rpx auto;
  padding: 24rpx 0;
  background: #333;
  color: #fff;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.competition-button:active {
  transform: scale(0.98);
  background: #444;
}